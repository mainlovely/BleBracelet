<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="data"
            type="com.zhj.bluetooth.zhjbluetoothsdk.bean.HealthSportItem" />
        <variable
            name="vm"
            type="com.zhj.bluetooth.sdkdemo.ui.ble.sport.SportHistoryListVM" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        >
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="16sp"
            android:textColor="@color/white"
            tools:text="时间:"
            />
        <TextView
            android:id="@+id/tvSteps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tvDate"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="30dp"
            android:textSize="14sp"
            android:textColor="@color/color_aaaaaa"
            tools:text="步数:"
            />
        <TextView
            android:id="@+id/tvCal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/tvSteps"
            app:layout_constraintStart_toEndOf="@+id/tvSteps"
            android:layout_marginStart="20dp"
            android:textSize="14sp"
            android:textColor="@color/color_aaaaaa"
            tools:text="卡路里:"
            />
        <TextView
            android:id="@+id/tvDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/tvSteps"
            app:layout_constraintStart_toEndOf="@+id/tvCal"
            android:layout_marginStart="20dp"
            android:textSize="14sp"
            android:textColor="@color/color_aaaaaa"
            tools:text="距离:"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
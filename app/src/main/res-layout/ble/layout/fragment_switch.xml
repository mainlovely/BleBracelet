<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_1D1D1D">

        <com.zhj.bluetooth.sdkdemo.view.CJMAppBar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <RelativeLayout
            android:id="@+id/rlHeart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintRight_toRightOf="parent"
            >
            <TextView
                android:id="@+id/tvHeartTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="心率检测开关"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:drawableStart="@mipmap/device_time_test"
                android:drawablePadding="5dp"
                android:layout_marginTop="30dp"
                android:layout_marginStart="30dp"
                />
            <com.kyleduo.switchbutton.SwitchButton
                android:id="@+id/switchHeart"
                android:layout_marginEnd="30dp"
                style="@style/SwitchButtonStyle"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_width="90dp"
                android:layout_height="50dp"
                app:kswAnimationDuration="300"
                app:kswBackDrawable="@drawable/ios_back_drawable"
                app:kswThumbDrawable="@drawable/ios_thumb_selector"
                app:kswThumbMarginBottom="-8dp"
                app:kswThumbMarginLeft="-5dp"
                app:kswThumbMarginRight="-5dp"
                app:kswThumbMarginTop="-2.5dp"
                app:kswThumbRangeRatio="1.4"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlHeartWarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rlHeart"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="30dp"
            >
            <TextView
                android:id="@+id/tvHeartWarmTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="心率报警开关"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:drawableStart="@mipmap/device_time_test"
                android:drawablePadding="5dp"
                android:layout_marginStart="30dp"
                />
            <com.kyleduo.switchbutton.SwitchButton
                android:id="@+id/switchHeartWarm"
                android:layout_marginEnd="30dp"
                style="@style/SwitchButtonStyle"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_width="90dp"
                android:layout_height="50dp"
                app:kswAnimationDuration="300"
                app:kswBackDrawable="@drawable/ios_back_drawable"
                app:kswThumbDrawable="@drawable/ios_thumb_selector"
                app:kswThumbMarginBottom="-8dp"
                app:kswThumbMarginLeft="-5dp"
                app:kswThumbMarginRight="-5dp"
                app:kswThumbMarginTop="-2.5dp"
                app:kswThumbRangeRatio="1.4"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlSetHeartWarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/rlHeartWarm"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            >
            <EditText
                android:id="@+id/etHeartWarm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/tvConfirm"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape_stroke_62"
                android:gravity="center_vertical"
                android:hint="请输入最大心率提醒"
                android:text="0"
                android:padding="12dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="14sp"
                android:inputType="number"
                />
            <TextView
                android:id="@+id/tvConfirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:text="确认设置"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_alignParentEnd="true"
                />
        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
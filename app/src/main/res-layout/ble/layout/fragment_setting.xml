<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="vm"
            type="com.zhj.bluetooth.sdkdemo.ui.ble.setting.SettingVM" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_1D1D1D"
        >
        <com.zhj.bluetooth.sdkdemo.view.CJMAppBar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:id="@+id/tvNameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="姓名:"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/tvNameContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tvNameTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_stroke_62"
            android:gravity="center_vertical"
            android:hint="请输入姓名"
            android:padding="12dp"
            android:text="@={vm.etName}"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/tvArchivesTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tvNameContent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="档案号:"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/tvArchivesContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tvArchivesTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_stroke_62"
            android:gravity="center_vertical"
            android:hint="请输入档案号"
            android:padding="12dp"
            android:text="@={vm.etArchives}"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvCodeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tvArchivesContent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="验证码:"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/tvCodeContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tvCodeTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/shape_stroke_62"
            android:gravity="center_vertical"
            android:hint="请输入验证码"
            android:padding="12dp"
            android:text="@={vm.etCode}"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvSubmit"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintTop_toBottomOf="@+id/tvCodeContent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="78dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="78dp"
            android:layout_marginBottom="68dp"
            android:background="@drawable/shape_btn_dd3c47"
            android:gravity="center"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="25dp"
            app:onSingleClick="@{(v) -> vm.onSubmit()}" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>